<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.zqhcxy.mytwittermopubdemo.MainActivity">

    <TextView
        android:id="@+id/title_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mupub Banner广告："
        android:textSize="20sp"
        />

    <com.mopub.mobileads.MoPubView
        android:id="@+id/ad_mopub_banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title_banner">
    </com.mopub.mobileads.MoPubView>

    <TextView
        android:id="@+id/title_mrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_mopub_banner"
        android:text="mupub Mrect广告："
        android:textSize="20sp"
        />

    <com.mopub.mobileads.MoPubView
        android:id="@+id/ad_mopub_mrect"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/title_mrect">

    </com.mopub.mobileads.MoPubView>

    <Button
        android:id="@+id/ad_mopub_interstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_mopub_mrect"
        android:text="INTERSTITIAL"/>
</RelativeLayout>
